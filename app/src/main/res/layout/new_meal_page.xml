<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#023047">

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="422dp"
        android:fontFamily="@font/jomhuria"
        android:text="Recommend this meal"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMealName"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="632dp"
        android:ems="10"
        android:fontFamily="@font/jomhuria"
        android:hint="Meal Name"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="585dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMeal_Description"
        android:layout_width="375dp"
        android:layout_height="100dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="156dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="475dp"
        android:ems="10"
        android:fontFamily="@font/jomhuria"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Description"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Addbutton"
        android:layout_width="160dp"
        android:layout_height="70dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="331dp"
        android:text="Add Meal"
        android:textSize="16sp"
        app:backgroundTint="#FB8500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>