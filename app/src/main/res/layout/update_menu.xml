<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#023047">

    <TextView
        android:id="@+id/textView_Meal_name"
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="632dp"
        android:fontFamily="@font/jomhuria"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_Meal_description"
        android:layout_width="374dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="158dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="478dp"
        android:fontFamily="@font/jomhuria"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="261dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="422dp"
        android:fontFamily="@font/jomhuria"
        android:text="Recommend this meal"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Update_meal"
        android:layout_width="157dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="234dp"
        android:layout_marginBottom="322dp"
        android:text="Update Meal"
        android:textSize="16sp"
        app:backgroundTint="#FB8500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Delete_meal"
        android:layout_width="157dp"
        android:layout_height="70dp"
        android:layout_marginStart="234dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="322dp"
        android:text="Delete Meal"
        android:textSize="16sp"
        app:backgroundTint="#FB8500"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>